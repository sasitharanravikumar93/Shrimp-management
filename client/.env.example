# ===================
# Environment Configuration Template
# Copy this file to .env.local and configure for your environment
# ===================

# ===================
# CORE CONFIGURATION
# ===================

# Application environment (development, production, test, staging)
NODE_ENV=development

# ===================
# API CONFIGURATION
# ===================

# Base URL for API endpoints (required)
REACT_APP_API_BASE_URL=http://localhost:5001/api

# API request timeout in milliseconds
REACT_APP_API_TIMEOUT=30000

# Number of API retry attempts
REACT_APP_API_RETRY_COUNT=3

# ===================
# APPLICATION INFO
# ===================

# Application version
REACT_APP_VERSION=1.0.0

# Application name
REACT_APP_APP_NAME=Fish Farm Management

# Build date (auto-generated if not set)
# REACT_APP_BUILD_DATE=2024-01-01T00:00:00.000Z

# ===================
# FEATURE FLAGS
# ===================

# Enable Progressive Web App features
REACT_APP_ENABLE_PWA=true

# Enable analytics tracking
REACT_APP_ENABLE_ANALYTICS=false

# Enable error reporting to external services
REACT_APP_ENABLE_ERROR_REPORTING=true

# Enable performance monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false

# ===================
# DEBUG & DEVELOPMENT
# ===================

# Enable debug utilities (auto-enabled in development)
REACT_APP_DEBUG_ENABLED=true

# Show performance monitor overlay
REACT_APP_SHOW_PERFORMANCE_MONITOR=false

# Enable verbose logging (auto-enabled in development)
REACT_APP_ENABLE_VERBOSE_LOGGING=true

# ===================
# EXTERNAL SERVICES
# ===================

# Analytics service ID (Google Analytics, etc.)
# REACT_APP_ANALYTICS_ID=G-XXXXXXXXXX

# Error reporting service DSN (Sentry, Bugsnag, etc.)
# REACT_APP_ERROR_REPORTING_DSN=https://your-dsn@sentry.io/project-id

# Remote logging endpoint
# REACT_APP_LOGGING_ENDPOINT=https://api.yourservice.com/logs

# ===================
# STORAGE CONFIGURATION
# ===================

# Prefix for localStorage and sessionStorage keys
REACT_APP_STORAGE_PREFIX=fishfarm_

# Default cache TTL in milliseconds (5 minutes)
REACT_APP_CACHE_TTL=300000

# ===================
# INTERNATIONALIZATION
# ===================

# Default application language
REACT_APP_DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
REACT_APP_SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,hi,zh,ja

# ===================
# SECURITY
# ===================

# Enable Content Security Policy
REACT_APP_ENABLE_CSP=true

# Session timeout in milliseconds (30 minutes)
REACT_APP_SESSION_TIMEOUT=1800000

# ===================
# UI CONFIGURATION
# ===================

# Default theme mode (light, dark, auto)
REACT_APP_THEME_MODE=auto

# Default pagination page size
REACT_APP_DEFAULT_PAGE_SIZE=25

# ===================
# PERFORMANCE
# ===================

# Enable response compression
REACT_APP_ENABLE_COMPRESSION=true

# Enable application caching
REACT_APP_ENABLE_CACHING=true

# ===================
# BUILD CONFIGURATION
# ===================

# Generate source maps (auto-enabled in development)
GENERATE_SOURCEMAP=true

# Skip Create React App preflight checks
SKIP_PREFLIGHT_CHECK=false