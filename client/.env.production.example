# ===================
# PRODUCTION Environment Configuration
# ===================

# Application environment
NODE_ENV=production

# ===================
# API CONFIGURATION
# ===================

# Production API endpoint (REQUIRED - update with your production API URL)
REACT_APP_API_BASE_URL=https://api.yourfishfarm.com/api

# Production API timeout (increased for slower networks)
REACT_APP_API_TIMEOUT=45000

# Production retry count
REACT_APP_API_RETRY_COUNT=2

# ===================
# APPLICATION INFO
# ===================

# Application version (set by CI/CD pipeline)
REACT_APP_VERSION=${npm_package_version}

# Application name
REACT_APP_APP_NAME=Fish Farm Management

# Build date (set by CI/CD pipeline)
REACT_APP_BUILD_DATE=${BUILD_DATE}

# ===================
# FEATURE FLAGS
# ===================

# Enable PWA features in production
REACT_APP_ENABLE_PWA=true

# Enable analytics in production
REACT_APP_ENABLE_ANALYTICS=true

# Enable error reporting in production
REACT_APP_ENABLE_ERROR_REPORTING=true

# Enable performance monitoring in production
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true

# ===================
# DEBUG & DEVELOPMENT (DISABLED IN PRODUCTION)
# ===================

# Disable debug utilities in production
REACT_APP_DEBUG_ENABLED=false

# Disable performance monitor overlay
REACT_APP_SHOW_PERFORMANCE_MONITOR=false

# Disable verbose logging in production
REACT_APP_ENABLE_VERBOSE_LOGGING=false

# ===================
# EXTERNAL SERVICES (CONFIGURE FOR PRODUCTION)
# ===================

# Production analytics ID
REACT_APP_ANALYTICS_ID=G-PROD123456

# Production error reporting DSN
REACT_APP_ERROR_REPORTING_DSN=https://your-production-dsn@sentry.io/project-id

# Production logging endpoint
REACT_APP_LOGGING_ENDPOINT=https://logs.yourfishfarm.com/api/logs

# ===================
# STORAGE CONFIGURATION
# ===================

# Production storage prefix
REACT_APP_STORAGE_PREFIX=fishfarm_prod_

# Production cache TTL (10 minutes)
REACT_APP_CACHE_TTL=600000

# ===================
# INTERNATIONALIZATION
# ===================

# Default language for production
REACT_APP_DEFAULT_LANGUAGE=en

# All supported languages
REACT_APP_SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,hi,zh,ja

# ===================
# SECURITY (ENHANCED FOR PRODUCTION)
# ===================

# Enable CSP in production
REACT_APP_ENABLE_CSP=true

# Production session timeout (45 minutes)
REACT_APP_SESSION_TIMEOUT=2700000

# ===================
# UI CONFIGURATION
# ===================

# Production theme mode
REACT_APP_THEME_MODE=auto

# Production pagination size
REACT_APP_DEFAULT_PAGE_SIZE=50

# ===================
# PERFORMANCE (OPTIMIZED FOR PRODUCTION)
# ===================

# Enable compression in production
REACT_APP_ENABLE_COMPRESSION=true

# Enable caching in production
REACT_APP_ENABLE_CACHING=true

# ===================
# BUILD CONFIGURATION
# ===================

# Disable source maps in production (for security)
GENERATE_SOURCEMAP=false

# Skip preflight checks in production
SKIP_PREFLIGHT_CHECK=true